FROM debian:bookworm-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Copy pre-built binary
COPY target/release/vuln_scanner_api /app/vuln_scanner_api

# Make it executable
RUN chmod +x /app/vuln_scanner_api

EXPOSE 8080

CMD ["/app/vuln_scanner_api"]